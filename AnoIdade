import java.util.Scanner;

/**
 * classe que pede o ano atual e ano de nascimento para determinar idade
 * @author aluno
 *
 */
public class AnoIdade {

	public static void main(String[] args) {
		System.out.println("Qual o ano atual?");
		Scanner leitor =new Scanner(System.in);
		int ano = leitor.nextInt();
		System.out.println("Qual o seu ano de nascimento?");
		int nascimento = leitor.nextInt();
		int idade = ano - nascimento;
		System.out.println("Sua idade eh "+ idade+" anos");
		leitor.close();
		
	}
}
