import java.util.Scanner;

public class MusicaCerveja {

	public static void main(String[] args) {
		Scanner leitor =new Scanner(System.in);
		int garrafas =leitor.nextInt();
		
		while (garrafas > 0){
			System.out.println(garrafas + " cervejas no freezer.");
			System.out.println("Pego uma garrafa, passo pra frente.");
			garrafas = garrafas - 1;
			System.out.println(garrafas +" cervejas agora no freezer.");
		}
		leitor.close();
	}
	
}
